
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Loans Management</h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <a href="/loans/issue" class="btn btn-sm btn-outline-primary">
      <i class="fas fa-plus"></i> Issue New Book
    </a>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>Book</th>
        <th>Student</th>
        <th>Issue Date</th>
        <th>Due Date</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if(typeof loans !== 'undefined' && loans.length > 0) { %>
        <% loans.forEach(function(loan) { %>
          <tr>
            <td><%= loan.book.title %></td>
            <td><%= loan.student.name %></td>
            <td><%= moment(loan.issueDate).format('MMM D, YYYY') %></td>
            <td><%= moment(loan.dueDate).format('MMM D, YYYY') %></td>
            <td>
              <% if(loan.status === 'issued') { %>
                <% if(new Date() > new Date(loan.dueDate)) { %>
                  <span class="badge bg-danger">Overdue</span>
                <% } else { %>
                  <span class="badge bg-info">Issued</span>
                <% } %>
              <% } else if(loan.status === 'returned') { %>
                <span class="badge bg-success">Returned</span>
              <% } else { %>
                <span class="badge bg-danger">Overdue</span>
              <% } %>
            </td>
            <td>
              <a href="/loans/details/<%= loan._id %>" class="btn btn-sm btn-info">
                <i class="fas fa-eye"></i>
              </a>
              <% if(loan.status !== 'returned') { %>
                <form action="/loans/return/<%= loan._id %>?_method=PUT" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-sm btn-success">
                    <i class="fas fa-undo"></i>
                  </button>
                </form>
              <% } %>
            </td>
          </tr>
        <% }); %>
      <% } else { %>
        <tr>
          <td colspan="6" class="text-center">No loans found</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>