
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Book Details</h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <a href="/books" class="btn btn-sm btn-outline-secondary">
      <i class="fas fa-arrow-left"></i> Back to Books
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="card mb-4">
      <div class="card-header">
        <h5>Book Information</h5>
      </div>
      <div class="card-body">
        <table class="table">
          <tr>
            <th>Title:</th>
            <td><%= book.title %></td>
          </tr>
          <tr>
            <th>Author:</th>
            <td><%= book.author %></td>
          </tr>
          <tr>
            <th>ISBN:</th>
            <td><%= book.isbn %></td>
          </tr>
          <tr>
            <th>Category:</th>
            <td><%= book.category %></td>
          </tr>
          <tr>
            <th>Quantity:</th>
            <td><%= book.quantity %></td>
          </tr>
          <tr>
            <th>Available:</th>
            <td><%= book.availableQuantity %></td>
          </tr>
          <tr>
            <th>Shelf Location:</th>
            <td><%= book.shelfLocation %></td>
          </tr>
          <tr>
            <th>Published Year:</th>
            <td><%= book.publishedYear || 'N/A' %></td>
          </tr>
          <tr>
            <th>Added Date:</th>
            <td><%= new Date(book.addedDate).toLocaleDateString() %></td>
          </tr>
        </table>
        
        <div class="mt-3">
          <a href="/books/edit/<%= book._id %>" class="btn btn-primary">
            <i class="fas fa-edit"></i> Edit
          </a>
          <form action="/books/delete/<%= book._id %>?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this book?')">
              <i class="fas fa-trash"></i> Delete
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h5>Loan History</h5>
      </div>
      <div class="card-body">
        <% if(loans.length > 0) { %>
          <div class="table-responsive">
            <table class="table table-striped table-sm">
              <thead>
                <tr>
                  <th>Student</th>
                  <th>Issue Date</th>
                  <th>Due Date</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                <% loans.forEach(function(loan) { %>
                  <tr>
                    <td><%= loan.student.name %></td>
                    <td><%= new Date(loan.issueDate).toLocaleDateString() %></td>
                    <td><%= new Date(loan.dueDate).toLocaleDateString() %></td>
                    <td>
                      <% if(loan.status === 'issued') { %>
                        <span class="badge bg-info">Issued</span>
                      <% } else if(loan.status === 'returned') { %>
                        <span class="badge bg-success">Returned</span>
                      <% } else { %>
                        <span class="badge bg-danger">Overdue</span>
                      <% } %>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p>No loan history found for this book.</p>
        <% } %>
      </div>
    </div>
  </div>
</div>