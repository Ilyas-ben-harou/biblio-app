
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Books Management</h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <a href="/books/add" class="btn btn-sm btn-outline-primary">
      <i class="fas fa-plus"></i> Add New Book
    </a>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>ISBN</th>
        <th>Category</th>
        <th>Available / Total</th>
        <th>Shelf Location</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if(typeof books !== 'undefined' && books.length > 0) { %>
        <% books.forEach(function(book) { %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td><%= book.isbn %></td>
            <td><%= book.category %></td>
            <td><%= book.availableQuantity %> / <%= book.quantity %></td>
            <td><%= book.shelfLocation %></td>
            <td>
              <a href="/books/details/<%= book._id %>" class="btn btn-sm btn-info">
                <i class="fas fa-eye"></i>
              </a>
              <a href="/books/edit/<%= book._id %>" class="btn btn-sm btn-primary">
                <i class="fas fa-edit"></i>
              </a>
              <form action="/books/delete/<%= book._id %>?_method=DELETE" method="POST" class="d-inline">
                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this book?')">
                  <i class="fas fa-trash"></i>
                </button>
              </form>
            </td>
          </tr>
        <% }); %>
      <% } else { %>
        <tr>
          <td colspan="7" class="text-center">No books found</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>