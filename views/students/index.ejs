
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Students Management</h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <a href="/students/add" class="btn btn-sm btn-outline-primary">
      <i class="fas fa-plus"></i> Add New Student
    </a>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>Name</th>
        <th>Student ID</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Department</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if(typeof students !== 'undefined' && students.length > 0) { %>
        <% students.forEach(function(student) { %>
          <tr>
            <td><%= student.name %></td>
            <td><%= student.studentId %></td>
            <td><%= student.email %></td>
            <td><%= student.phone || 'N/A' %></td>
            <td><%= student.department %></td>
            <td>
              <a href="/students/details/<%= student._id %>" class="btn btn-sm btn-info">
                <i class="fas fa-eye"></i>
              </a>
              <a href="/students/edit/<%= student._id %>" class="btn btn-sm btn-primary">
                <i class="fas fa-edit"></i>
              </a>
              <form action="/students/delete/<%= student._id %>?_method=DELETE" method="POST" class="d-inline">
                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this student?')">
                  <i class="fas fa-trash"></i>
                </button>
              </form>
            </td>
          </tr>
        <% }); %>
      <% } else { %>
        <tr>
          <td colspan="6" class="text-center">No students found</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>