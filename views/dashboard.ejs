
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Dashboard</h1>
</div>

<div class="row">
  <div class="col-md-3 mb-4">
    <div class="card text-white bg-primary">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h5 class="card-title">Total Books</h5>
            <h2 class="card-text"><%= typeof bookCount !== 'undefined' ? bookCount : 0 %></h2>
          </div>
          <i class="fas fa-book fa-3x"></i>
        </div>
        <a href="/books" class="text-white">View Details</a>
      </div>
    </div>
  </div>
  
  <div class="col-md-3 mb-4">
    <div class="card text-white bg-success">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h5 class="card-title">Total Students</h5>
            <h2 class="card-text"><%= typeof studentCount !== 'undefined' ? studentCount : 0 %></h2>
          </div>
          <i class="fas fa-user-graduate fa-3x"></i>
        </div>
        <a href="/students" class="text-white">View Details</a>
      </div>
    </div>
  </div>
  
  <div class="col-md-3 mb-4">
    <div class="card text-white bg-info">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h5 class="card-title">Active Loans</h5>
            <h2 class="card-text"><%= typeof activeLoansCount !== 'undefined' ? activeLoansCount : 0 %></h2>
          </div>
          <i class="fas fa-exchange-alt fa-3x"></i>
        </div>
        <a href="/loans" class="text-white">View Details</a>
      </div>
    </div>
  </div>
  
  <div class="col-md-3 mb-4">
    <div class="card text-white bg-danger">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h5 class="card-title">Overdue Loans</h5>
            <h2 class="card-text"><%= typeof overdueLoansCount !== 'undefined' ? overdueLoansCount : 0 %></h2>
          </div>
          <i class="fas fa-exclamation-triangle fa-3x"></i>
        </div>
        <a href="/loans" class="text-white">View Details</a>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6 mb-4">
    <div class="card">
      <div class="card-header">
        <h5>Recent Loans</h5>
      </div>
      <div class="card-body">
        <% if(typeof recentLoans !== 'undefined' && recentLoans.length > 0) { %>
          <div class="table-responsive">
            <table class="table table-striped table-sm">
              <thead>
                <tr>
                  <th>Book</th>
                  <th>Student</th>
                  <th>Issue Date</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                <% recentLoans.forEach(function(loan) { %>
                  <tr>
                    <td><%= loan.book.title %></td>
                    <td><%= loan.student.name %></td>
                    <td><%= moment(loan.issueDate).format('MMM D, YYYY') %></td>
                    <td>
                      <% if(loan.status === 'issued') { %>
                        <span class="badge bg-info">Issued</span>
                      <% } else if(loan.status === 'returned') { %>
                        <span class="badge bg-success">Returned</span>
                      <% } else { %>
                        <span class="badge bg-danger">Overdue</span>
                      <% } %>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p>No recent loans found.</p>
        <% } %>
        <a href="/loans" class="btn btn-sm btn-primary">View All Loans</a>
      </div>
    </div>
  </div>
  
  <div class="col-md-6 mb-4">
    <div class="card">
      <div class="card-header">
        <h5>Books with Low Stock</h5>
      </div>
      <div class="card-body">
        <% if(typeof lowStockBooks !== 'undefined' && lowStockBooks.length > 0) { %>
          <div class="table-responsive">
            <table class="table table-striped table-sm">
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Author</th>
                  <th>Available</th>
                  <th>Total</th>
                </tr>
              </thead>
              <tbody>
                <% lowStockBooks.forEach(function(book) { %>
                  <tr>
                    <td><%= book.title %></td>
                    <td><%= book.author %></td>
                    <td><%= book.availableQuantity %></td>
                    <td><%= book.quantity %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p>No books with low stock found.</p>
        <% } %>
        <a href="/books" class="btn btn-sm btn-primary">View All Books</a>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-4">
    <div class="card">
      <div class="card-header">
        <h5>Overdue Loans</h5>
      </div>
      <div class="card-body">
        <% if(typeof overdueLoans !== 'undefined' && overdueLoans.length > 0) { %>
          <div class="table-responsive">
            <table class="table table-striped table-sm">
              <thead>
                <tr>
                  <th>Book</th>
                  <th>Student</th>
                  <th>Issue Date</th>
                  <th>Due Date</th>
                  <th>Days Overdue</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% overdueLoans.forEach(function(loan) { %>
                  <tr>
                    <td><%= loan.book.title %></td>
                    <td><%= loan.student.name %></td>
                    <td><%= moment(loan.issueDate).format('MMM D, YYYY') %></td>
                    <td><%= moment(loan.dueDate).format('MMM D, YYYY') %></td>
                    <td><%= moment().diff(moment(loan.dueDate), 'days') %></td>
                    <td>
                      <form action="/loans/return/<%= loan._id %>?_method=PUT" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-success">Return</button>
                      </form>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p>No overdue loans found.</p>
        <% } %>
      </div>
    </div>
  </div>
</div>